<Window x:Class="DeweyApp.ComingSoon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeweyApp"
        mc:Ignorable="d"
        Title="ComingSoon" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Images/GeneralBackgrounds/ComingSoonBackground.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="New Feature"
               FontSize="48"
               FontWeight="Bold"
               Margin="0,10,0,0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
        <Label Content="Coming Soon!"
               FontSize="48"
               FontWeight="Bold"
               Margin="0,68,0,0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>

        <Button Name="btnMainMenuScreen"
                Content="Return to Main Menu"
                FontSize="24"
                Width="240"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Click="btnMainMenuScreen_Click"/>
    </Grid>
</Window>
